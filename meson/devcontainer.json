{
  "name": "devcontainer-meson",
  "build": {
    "args": {
      "http_proxy": "${localEnv:http_proxy}",
      "https_proxy": "${localEnv:https_proxy}",
      "no_proxy": "${localEnv:no_proxy}",
      "MESON_VERSION": "0.63.3",
      "NINJA_VERSION": "v1.11.1",
      "VSC_UBUNTU_IMAGE": "docker.io/yaekee/vsc-devcontainer-ubuntu:jammy"
    },
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "http_proxy": "${localEnv:http_proxy}",
    "https_proxy": "${localEnv:https_proxy}",
    "no_proxy": "${localEnv:no_proxy}"
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "EditorConfig.EditorConfig",
        "melak47.ninja-syntax",
        "mesonbuild.mesonbuild",
        "ms-vscode.cpptools",
        "mwinters-stuff.ninjabuild",
        "VisualStudioExptTeam.vscodeintellicode"
      ]
    }
  },
  "mounts": [
    "source=devcontainer-meson,target=/home/ubuntu/.vscode-server/extensions,type=volume"
  ],
  "remoteUser": "ubuntu"
}
