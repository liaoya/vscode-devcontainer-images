{
  "name": "devcontainer-ubuntu",
  "build": {
    "args": {
      "http_proxy": "${localEnv:http_proxy}",
      "https_proxy": "${localEnv:https_proxy}",
      "no_proxy": "${localEnv:no_proxy}",
      "BASE_IMAGE": "docker.io/library/ubuntu:jammy-20220815",
      "PIP_INDEX_URL": "${localEnv:PIP_INDEX_URL}",
      "PIP_TRUSTED_HOST": "${localEnv:PIP_TRUSTED_HOST}",
      "UBUNTU_MIRROR_PATH": "${localEnv:UBUNTU_MIRROR_PATH}"
    },
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "http_proxy": "${localEnv:http_proxy}",
    "https_proxy": "${localEnv:https_proxy}",
    "no_proxy": "${localEnv:no_proxy}"
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "EditorConfig.EditorConfig",
        "exiasr.hadolint",
        "timonwong.shellcheck",
        "VisualStudioExptTeam.vscodeintellicode"
      ]
    }
  },
  "mounts": [
    "source=devcontainer-ubuntu,target=/home/ubuntu/.vscode-server/extensions,type=volume"
  ],
  "remoteUser": "ubuntu"
}
