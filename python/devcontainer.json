{
  "name": "devcontainer-python",
  "build": {
    "args": {
      "http_proxy": "${localEnv:http_proxy}",
      "https_proxy": "${localEnv:https_proxy}",
      "no_proxy": "${localEnv:no_proxy}",
      "VSC_UBUNTU_IMAGE": "docker.io/yaekee/vsc-devcontainer-ubuntu:jammy",
      "PIP_INDEX_URL": "${localEnv:PIP_INDEX_URL}",
      "PIP_TRUSTED_HOST": "${localEnv:PIP_TRUSTED_HOST}",
    },
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "http_proxy": "${localEnv:http_proxy}",
    "https_proxy": "${localEnv:https_proxy}",
    "no_proxy": "${localEnv:no_proxy}"
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "EditorConfig.EditorConfig",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "VisualStudioExptTeam.vscodeintellicode"
      ]
    }
  },
  "mounts": [
    "source=devcontainer-python,target=/home/ubuntu/.vscode-server/extensions,type=volume"
  ],
  "remoteUser": "ubuntu"
}
